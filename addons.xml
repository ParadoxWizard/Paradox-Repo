<?xml version="1.0" encoding="UTF-8"?>
<addons>
    <addon id="plugin.video.paradoxwizard" name="Paradox Wizard" version="1.0.0" provider-name="Team Paradox">
        <requires>
            <import addon="xbmc.python" version="2.1.0" />
            <import addon="script.module.requests" version="1.1.0" />
            <import addon="script.module.addon.common" />
        </requires>
        <extension point="xbmc.python.pluginsource" library="default.py">
            <provides>video executable</provides>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary lang="en">Paradox Wizard</summary>
            <description lang="en">Paradox Wizard</description>
            <platform>all</platform>
        </extension>
    </addon>

<addon id="repository.paradox" name="Paradox Repository" version="1.0.0" provider-name="Paradox Team">
	<extension point="xbmc.addon.repository" name="TheBlackBox Repository">
		<info compressed="false">https://raw.githubusercontent.com/ParadoxWizard/Paradox-Repo/master/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/ParadoxWizard/Paradox-Repo/master/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.githubusercontent.com/ParadoxWizard/Paradox-Repo/master/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install Paradox Addons</summary>
		<description>Download and install wizards and addons by the Paradox Team</description>
		<platform>all</platform>
	</extension>
</addon>
</addons>
